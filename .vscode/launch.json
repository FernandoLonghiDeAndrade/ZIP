{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Test (Linux)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests",
            "cwd": "${workspaceFolder}/build",
            "externalConsole": false,
            "preLaunchTask": "build-tests",
        },
        {
            "name": "Run Server (Windows)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/server.exe",
            "cwd": "${workspaceFolder}/build",
            "preLaunchTask": "build-server",
            "externalConsole": false
        },
        {
            "name": "Run Client (Windows)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/client.exe",
            "cwd": "${workspaceFolder}/build",
            "preLaunchTask": "build-client",
            "externalConsole": false
        },
        {
            "name": "Run Server (Linux/Mac)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/server",
            "cwd": "${workspaceFolder}/build",
            "preLaunchTask": "build-server",
            "MIMode": "gdb",
            "externalConsole": false
        },
        {
            "name": "Run Client (Linux/Mac)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/client",
            "cwd": "${workspaceFolder}/build",
            "preLaunchTask": "build-client",
            "MIMode": "gdb",
            "externalConsole": false
        }
    ]
}